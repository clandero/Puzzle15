<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.curso.tarea2_1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal|center_vertical">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center|center_horizontal|center_vertical">

                <TextView
                    android:id="@+id/score_title"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:text="NÂ° de jugadas:"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textIsSelectable="false" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text=""
                    android:textSize="40sp" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/game_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal|center_vertical"
                tools:ignore="MissingConstraints">

                <TableRow
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/pos1_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos1_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos1_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos1_4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/pos2_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos2_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos2_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos2_4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/row3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/pos3_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos3_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos3_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos3_4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/row4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/pos4_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos4_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/pos4_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/pos4_4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9c9c9c"
                        android:textSize="25sp" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save_game"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/show_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textSize="25sp"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:id="@+id/game_image"
                android:layout_width="245dp"
                android:layout_height="250dp"
                android:layout_weight="0"
                android:paddingTop="5dp"
                android:paddingBottom="0dp"
                app:srcCompat="@drawable/imagenoriginal" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>